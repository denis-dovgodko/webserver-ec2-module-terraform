apiVersion: infra.contrib.fluxcd.io/v1alpha2
kind: Terraform
metadata:
  name: {{ envname }}
  namespace: flux-system
spec:
  vars:
  - name: environment_name
    value: {{ envname }}
  interval: 2m
  path: ./infrastructure
  sourceRef:
    kind: GitRepository
    name: {{ envname }}
  approvePlan: auto
  runnerPodTemplate:
    spec:
      envFrom:
        - secretRef:
            name: aws-credentials